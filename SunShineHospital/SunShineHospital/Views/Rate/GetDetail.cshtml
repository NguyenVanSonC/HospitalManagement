@model float[]
@{
    var doctorId = (int)ViewBag.doctorId;
    var averageRate = (float) ViewBag.averageRate;
}
<div style="display: none" data-id="@doctorId" id="rate-doctor-id"></div>

<div class="col-lg-3">
    <div id="review_summary">
        <strong id="average-rate">@averageRate</strong>
        <div class="rating">
            @for (int i = 0; i < 5; i++)
            {
                if ((i + 1) <= averageRate)
                {
                    <i class="icon_star voted"></i>
                }
                else
                {
                    <i class="icon_star"></i>
                }
            }
        </div>
        <small>Số Sao Trung Bình</small>
    </div>
</div>
<div class="col-lg-9" id="rate-list">
    @for (int i = 0; i < 5; i++)
    {
        <div class="row">
            <div class="col-lg-10 col-9">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @(Model[i])%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="col-lg-2 col-3"><small><strong>@(i + 1) Sao</strong></small></div>
        </div>
    }
</div>
