@using SunShineHospital.Infrastructure.Core
@using SunShineHospital.Models
@model PaginationSet<DoctorViewModel>
@{
    ViewBag.Title = "GetAllDoctor";
    var pageSize = ViewBag.pageSize;
    var count = ViewBag.count;
    var soft = ViewBag.soft;
}

<div id="results">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4><strong>Xem @count</strong> trong @Model.TotalCount kết quả</h4>
            </div>
            <div class="col-md-6">
                <div class="search_bar_list">
                    <input type="text" class="form-control" placeholder="Ex. Specialist, Name, Doctor...">
                    <input type="submit" value="Search">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="filters_listing">
    <div class="container">
        <ul class="clearfix">
            <li>
                <h6>Sắp xếp theo</h6>
                <select name="orderby" class="selectbox" id="softby">
                    <option value="?soft=rate">Lượt yêu thích</option>
                    <option value="?soft=popular">Lượt truy cập</option>
                    <option value="?soft=men">BS Nam</option>
                    <option value="?soft=women">BS Nữ</option>
                </select>
            </li>
        </ul>
    </div>
</div>

<div class="container margin_60_35">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var doctor in Model.Items)
                {
                    <div class="col-md-4">
                        <div class="box_list wow fadeIn">
                            <a href="#0" class="wish_bt"></a>
                            <figure>
                                <a href="">
                                    <img src="@doctor.Image" class="img-fluid" alt="">
                                    <div class="preview"><span>Xem thông tin</span></div>
                                </a>
                            </figure>
                            <div class="wrapper">
                                <small>Chuyên : @doctor.Department.Name</small>
                                <h3>Bác sĩ: @doctor.User.FullName</h3>
                                <p>Tốt nghiệp: @doctor.Education</p>
                                <span class="rating"><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star"></i><i class="icon_star"></i> <small>(145)</small></span>
                                <a href="badges.html" data-toggle="tooltip" data-placement="top" data-original-title="Badge Level" class="badge_list_1"><img src="img/badges/badge_2.svg" width="15" height="15" alt=""></a>
                            </div>
                            <ul>
                                <li><a href="detail-page.html">Đặt lịch</a> </li>
                            </ul>              
                        </div>
                    </div>
                }
            </div>

            <nav aria-label="" class="add_top_20">
                <ul class="pagination pagination-sm">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (@Model.Page == i)
                        {
                            <li class="page-item active"><a class="page-link" id="doctor-page" href="?page=@i&soft=@soft">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" id="doctor-page" href="?page=@i&soft=@soft">@i</a></li>
                        }
                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" id="doctor-page" href="?page=@(Model.Page+1)&soft=@soft">Trang tiếp</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
